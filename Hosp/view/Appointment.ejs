<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Appointment</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="/Appointment.css">
  <style>
    .clock-container {
      display: flex;
      justify-content: center;
      gap: 20px;
      align-items: center;
      margin-top: 20px;
    }

    .clock,
    .countdown {
      font-size: 24px;
      font-weight: bold;
      background: #333;
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
    }
  </style>
</head>

<body>


  <main>
    <section class="Main_container full-width-section text-center">
      <div class="row py-lg-3 w-100">
        <div class="col-lg-6 col-md-8 mx-auto">
          <h1 class="Heading fw-bold">Your Appointment</h1>
          <p class="lead text-body-secondary">Be ready for this event it is more important than anything</p>

          <!-- Clock and Countdown Timer -->
          <div class="clock-container">
            <div class="clock" id="clock">00:00:00</div>
            <div class="countdown bg-danger" id="countdown">00:00</div>
          </div>
        </div>
      </div>
    </section>

    <%All.forEach(appoint=>{%>
      <div class="album py-5 bg-body-tertiary">
        <div class="container">
          <img src="#" class="Image">
          <rect width="100%" height="100%" fill="#55595c"></rect>
          </svg>

          <div class="card-body">
            <p class="card-text">Doctor Email :<%=appoint.doctoremail %>
            </p>
            <p class="card-text">Your Name :<%=appoint.PatientName %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-secondary"><a
                    href="/Appointment/cancle?Patient_id=<%= appoint._id %>">Cancle</a></button>
                <button type="button" class="btn btn-sm btn-outline-secondary"><svg xmlns="http://www.w3.org/2000/svg"
                    width="16" height="16" fill="currentColor" class="bi bi-check-square-fill" viewBox="0 0 16 16">
                    <path
                      d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm10.03 4.97a.75.75 0 0 1 .011 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.75.75 0 0 1 1.08-.022z" />
                  </svg></button>

                <button type="button" class="btn btn-sm btn-outline-secondary">Add medicine</button>
              </div>
              <small class="text-body-secondary">9 mins</small>
            </div>
          </div>
        </div>
      </div>
      </div>
      </div>
      </div>

  </main>
  <%})%>
    <script>
      function updateClock() {
        const now = new Date();
        document.getElementById("clock").innerText = now.toLocaleTimeString();
      }
      setInterval(updateClock, 1000);
      updateClock();



    </script>

</body>

</html>